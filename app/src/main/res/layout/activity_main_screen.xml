<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#596869"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainScreen">


    <ImageButton
        android:id="@+id/settingsTxt"
        android:background="#515751"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:src="@mipmap/ic_settings_white_48dp"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/armBtn"
        android:layout_alignLeft="@+id/deviceBtn"
        android:layout_alignStart="@+id/deviceBtn" />

    <ImageButton
        android:id="@+id/logsBtn"
        android:src="@mipmap/ic_event_white_48dp"
        android:background="#515751"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:textColor="#000000"
        android:textSize="15dp"

        android:layout_above="@+id/armBtn"
        android:layout_alignLeft="@+id/logoutBtn"
        android:layout_alignStart="@+id/logoutBtn"
        android:layout_marginBottom="48dp" />

    <ImageButton
        android:id="@+id/logoutBtn"
        android:background="#515751"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:textColor="#000000"
        android:textSize="15dp"

        android:src="@mipmap/ic_exit_to_app_white_48dp"
        android:layout_alignTop="@+id/settingsTxt"
        android:layout_toRightOf="@+id/armBtn"
        android:layout_toEndOf="@+id/armBtn"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp" />

    <ImageButton
        android:id="@+id/deviceBtn"
        android:background="#515751"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:src="@mipmap/ic_track_changes_white_48dp"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp"
        android:layout_alignTop="@+id/logsBtn"
        android:layout_toLeftOf="@+id/armBtn"
        android:layout_toStartOf="@+id/armBtn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/armBtn"
        android:background="#515751"
        android:src="@mipmap/ic_lock_open_white_48dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/devicebtntxt"
        android:id="@+id/deviceTxt"
        android:layout_below="@+id/deviceBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/armBtn"
        android:layout_alignEnd="@+id/armBtn"
        android:textAlignment="center"
        android:textColor="#62BEC1"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="       Event Logs"
        android:id="@+id/logsTxt"
        android:textColor="#62BEC1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_alignTop="@+id/deviceTxt"
        android:layout_toRightOf="@+id/deviceTxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="           Settings"
        android:id="@+id/textView7"
        android:layout_below="@+id/settingsTxt"
        android:layout_toLeftOf="@+id/armBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#62BEC1"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="          Logout"
        android:id="@+id/textView8"
        android:layout_below="@+id/logoutBtn"
        android:layout_toRightOf="@+id/armBtn"
        android:layout_alignRight="@+id/logsTxt"
        android:layout_alignEnd="@+id/logsTxt"
        android:textStyle="bold"
        android:textColor="#62BEC1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="     Arm System"
        android:id="@+id/textView9"
        android:layout_below="@+id/armBtn"
        android:layout_toLeftOf="@+id/logsBtn"
        android:layout_toRightOf="@+id/settingsTxt"
        android:layout_toEndOf="@+id/settingsTxt"
        android:textColor="#62BEC1"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_above="@+id/logsBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#36453B"
        android:src="@mipmap/raspi_logo" />

</RelativeLayout>
