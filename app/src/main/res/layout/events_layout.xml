<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                >

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/misc"
        android:id="@+id/view"
        android:layout_alignBottom="@+id/device_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/device_timestamp"
        android:textColor="@color/text"
        android:layout_above="@+id/view"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:gravity="center"
        android:id="@+id/device_name"
        android:layout_toLeftOf="@+id/device_timestamp"
        android:layout_toStartOf="@+id/device_timestamp"
        android:textColor="@color/text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/device_status"
        android:layout_alignBaseline="@+id/device_name"
        android:layout_alignBottom="@+id/device_name"
        android:layout_toRightOf="@+id/device_timestamp"
        android:layout_toEndOf="@+id/device_timestamp"
        android:textColor="@color/text"/>

</RelativeLayout>